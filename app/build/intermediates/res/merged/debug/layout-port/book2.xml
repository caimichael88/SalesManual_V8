<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:cacheColorHint="#00000000"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="18dip">
    
   <!--  Book Title -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:layout_width="550dip"
    	android:gravity="bottom"
    	android:id="@+id/bookInfo"
    	android:typeface="sans"
    	android:textSize="18sp"
    	android:textStyle="bold|italic"
    	android:layout_marginRight="10dip">
    </TextView>
    
    <!--  ISBN -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:layout_width="150dip"
    	android:id="@+id/isbn"
    	android:typeface="sans"
    	android:textStyle="bold"
    	android:textSize="15sp"
    	android:layout_toRightOf="@+id/bookInfo"
    	android:layout_marginLeft="10dip">
    </TextView>
    
    <!-- PG -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:id="@+id/PG"
    	android:typeface="sans"
    	android:textStyle="bold"
    	android:textSize="15sp"
    	android:layout_alignWithParentIfMissing="true"
    	android:layout_toRightOf="@+id/isbn"
    	android:layout_marginLeft="10dip" android:layout_width="100dip">
    </TextView>
	
	<!--  Book Type -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:layout_width="150dip"
    	android:gravity="bottom"
    	android:id="@+id/bookType"
    	android:typeface="sans"
    	android:textStyle="bold"
    	android:textSize="15sp"
    	android:layout_toRightOf="@+id/PG"
    	android:layout_marginLeft="10dip">
    </TextView> 
    
    <!-- PRIIORITY -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:id="@+id/PRI"
    	android:typeface="sans"
    	android:textStyle="bold"
    	android:textSize="15sp"
    	android:layout_toRightOf="@+id/bookType"
    	android:layout_alignWithParentIfMissing="true"
    	android:layout_marginLeft="10dip" android:layout_width="100dip">
    </TextView> 
	
	
    
    <!-- OFFICIAL PRITING -->
    <TextView
    	android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_height="wrap_content"
    	android:text="TextView"
    	android:id="@+id/OFF"
    	android:typeface="sans"
    	android:textStyle="bold"
    	android:textSize="15sp"
    	android:layout_alignWithParentIfMissing="true"
    	android:layout_toRightOf="@+id/PRI"
    	android:layout_marginLeft="5dip" android:layout_width="50dip">
    </TextView>  

	
               
   
   
    
   
</RelativeLayout >
